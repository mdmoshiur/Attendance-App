<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <TextView
        android:id="@+id/sum_course_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course No.: CSE 1001"
        android:textStyle="italic"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:singleLine="true"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/sum_series_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Series: CSE'15 (Section: B)"
        android:textStyle="italic"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:layout_below="@+id/sum_course_id"
        android:layout_marginTop="4dp"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/sum_total_class_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total class: 18"
        android:textStyle="italic"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:layout_below="@+id/sum_series_id"
        android:layout_marginTop="4dp"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/sum_average_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Average % of Attendance: 70%"
        android:textStyle="italic"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:layout_below="@+id/sum_total_class_id"
        android:layout_marginTop="4dp"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:ellipsize="end"
        />

</RelativeLayout>